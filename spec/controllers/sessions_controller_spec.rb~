require 'spec_helper'

describe SessionsController do

  describe "GET 'login'" do
    it "should be successful" do
      get '/login'
      response.should be_success
    end
  end

  describe "POST 'login'" do
    it "should be successful" do
      post '/logit'
      response.should be_success
    end
  end

  describe "DELETE 'destroy'" do
    it "should be successful" do
      delete 'logout'
      response.should be_success
    end
  end

end

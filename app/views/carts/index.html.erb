<h1>Список корзин</h1>

<table class='table-list'>
  <thead>
    <tr>
      <th>Номер</th>
      <th><%= t(:created) %></th>
      <th><%= t(:last_update) %></th>
      <th><%= t(:user) %></th>
      <th><%= t(:total) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>      
      <tr>
        <td><%= cart.id %></td>
        <td><%= cart.created_at.strftime("%B %d, %Y, %H:%M") %></td>
        <td><%= cart.updated_at.strftime("%B %d, %Y, %H:%M") %></td>
        <td><%= cart.user.name %></td>
        <td><%= cart.total_price %></td>
        <td><%= link_to "<i class='icon-zoom-in'></i>".html_safe, cart,class:'btn btn-mini' %>
            <%= link_to "<i class='icon-edit'></i>".html_safe, edit_cart_path(cart),class:'btn btn-mini' %>
            <%= link_to "<i class='icon-remove'></i>".html_safe, cart, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-mini'%>
        </td>
      </tr>       
    <% end %>
  </tbody> 
</table>

<h1>Listing carts</h1>

<table class='table table-bordered table-hover'>
  <tr>
    <th><%= t(:created) %></th>
    <th><%= t(:last_update) %></th>
    <th><%= t(:user) %></th>
    <th><%= t(:total) %></th>
    <th><%= t(:actions) %></th>
  </tr>

<% @carts.each do |cart| %>
  <tr>
    <td><%= cart.created_at.strftime("%B %d, %Y, %H:%M") %></td>
    <td><%= cart.updated_at.strftime("%B %d, %Y, %H:%M") %></td>
    <td><%= cart.user.name %></td>
    <td><%= cart.total_price %></td>
    <td><%= link_to 'Show', cart,class:'btn btn-small' %>
    <%= link_to t(:edit), edit_cart_path(cart),class:'btn btn-small' %>
    <%= link_to t(:destroy), cart, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-small' %></td>
  </tr>
<% end %>
</table>



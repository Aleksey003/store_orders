<div class="row">
	<div class="span6">
		<h3><%= t(".Products") %></h3>
	</div>	

	<div id="myTab" class="pull-right" >
		<%= link_to products_path product_list: 1 do %>
			<span class="btn btn-large"><i class="icon-list"></i></span>
		<% end %>
		<%= link_to products_path product_list: 2 do %>
			<span class="btn btn-large"><i class="icon-th-large"></i></span>
		<% end %>
	</div>
</div>

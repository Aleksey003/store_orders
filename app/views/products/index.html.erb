<h1>Products</h1>
<ul class="thumbnails">
    <% @products.each do |product| %>
        <li class='span3'>
            <%= link_to  product do %>
                <div class='thumbnail'>              
            	   <%= image_tag(product.assets.first.data.url(:thumb)) unless product.assets.first.nil? %>
                    <h3><%= product.title %></h3>
                    <p>$ 100</p>
                   
					<%= link_to 'Edit', edit_product_path(product), class: "btn btn-mini btn-inverse" %>
                    <%= link_to 'Destroy', product, method: :delete, confirm: "Are you sure?", class: "btn btn-mini btn-danger" %>               
                </div>
            <% end %>
        </li>
    <% end %>
<ul>
<div class='span9 offset3'>
    <%= will_paginate @products %>
    <%= link_to 'New Product', new_product_path, class:'btn btn-success' %>
</div>


<hr class="soft">
<div class="tab-content">
	
	<div  id="listView" class="tab-pane active">

			<% @products.each do |product| %>
				<div class='row'>        		
						
						<div class="span2">
							<p>Код: <%= product.id %></p>
							<%= link_to  product do %>
								<%= image_tag(product.get_head_asset.data.url(:thumb)) unless product.get_head_asset.nil? %>

							<% end %>

						</div>

						<div class="span4">
							<h5><%= truncate(product.title, length: 22) %></h5>
								<a class="btn btn-primary" href="#">&euro;<%= product.price %></a>
							<!-- <p id=<%="quantity#{product.id}" %>></p> -->		
						</div>

						<div class="span3 alignR">
								<%= link_to'<i class="icon-zoom-in"></i>'.html_safe,  product, class: 'btn' %>						
								<%= link_to 'Купить<i class="icon-shopping-cart"></i>'.html_safe, line_items_path(product_id: product), method: :post, remote: true, class: 'btn' %>
								
						</div>	
				</div>
				<hr class="soft"></hr>	                   

			<% end %>
	</div>


</div>
<%= will_paginate @products %>

<div class='btn-bottom'>
	<p><%= link_to t(:NewProduct), new_product_path, class:'btn' if can? :create, Product %></p>    			
</div>







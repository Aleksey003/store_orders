									 <p><%= link_to t('.Add_to_cart'), line_items_path(product_id: product), method: :post, class: 'btn btn-primary', remote: true %></p></br>
									 <%= link_to t(:edit), edit_product_path(product), class: "btn btn-link" if can? :update, product %>
									 <%= link_to t(:destroy), product, method: :delete, confirm: "Are you sure?", class: "btn btn-link"  if can? :delete, product %>
								</div>
            	</div>
            </div>
        </li>
    <% end %>
<ul>


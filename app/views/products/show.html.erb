<p><h1><%= @product.title %></h1></p>
<div class='row'>
	<div class='span4'>
		<div id="myCarousel" class="carousel slide">
			<div class="carousel-inner">
				<% @product.assets.each do |assets| %>
    				<div class="item">
    					<%= image_tag(assets.data.url(:medium))%>
    					<div class='carousel-caption'>
    						<%= @product.title %>
    					</div>
    				</div>    			
    			<% end %>
  			</div>
  			<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  			<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>		
		</div>
	</div>
	<div class='span5'>
		<p><strong class="label label-info">Price:<%=@product.price%></strong></p>
		<p>
  			<b>Product state:</b>
  			<%= @product.product_state.name unless @product.product_state.nil? %></br>
  			<b>Product category:</b>
  			<%= @product.product_category.name %>
		</p>
		<p><span id='product_quantity' > </span></p></br>
		<%= link_to 'Show quantity', product_path(@product, show_quantity: true), remote: true, class: 'btn btn-small btn-info' %>
	</div>
</div>
<p>
  <b>Description:</b>
  <%= @product.description %>
</p>


<%= link_to 'Edit', edit_product_path(@product), class: 'btn' if can? :update, @product%> |
<%= link_to 'Back', products_path, class: 'btn' %> |

<script type="text/javascript">
	$('.carousel').carousel({interval: 8000})
</script>

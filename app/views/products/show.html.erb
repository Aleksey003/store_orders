<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Product state:</b>
  <%= @product.product_state.name unless @product.product_state.nil? %>
</p>

<p>
  <b>Product category:</b>
  <%= @product.product_category.name %>
</p>

<span id='product_quantity' > </span></br>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn' %> |
<%= link_to 'Back', products_path, class: 'btn' %> |
<%= link_to 'Show quantity', product_path(@product, show_quantity: true), remote: true, class: 'btn btn-info' %>

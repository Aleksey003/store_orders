<p id="notice"><%= notice %></p>
<h1><%= t('.listing_orders') %></h1>

<table>
  <tr>
    <th><%= t('.date') %></th>
    <th><%= t('.user') %></th>
    <th><%= t('.comments') %></th>
    <th>Email</th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.order_date %></td>
    <td><%= order.user.name unless order.user.nil? %></td>
    <td><%= order.comment %></td>
    <td><%= order.email %></td>
    <td><%= link_to 'Show', order %>
    <%= link_to 'Edit', edit_order_path(order) %>
    <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>




<p><%= will_paginate @orders %></p>
<!DOCTYPE html>
<html>
<head>
  <title>StoreOrders</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id='wrapper'>
      <!-- header -->
      <div id='header'>

        <div id='page-title'>
          <h1> Shopping cart </h1>
        </div>

        <!-- nav -->
        <div id='main-nav'>        
          <%= render "./layouts/menu" %>         
        </div>
        <p id='utility'>
          <span class="customer">
              <% if user_signed_in? %>
              <%= link_to "<i class='icon-user'></i>".html_safe + ": #{current_user.name}", current_user %>
              <%= link_to "<i class='icon-off'></i> ".html_safe+t(".Logout"), destroy_user_session_path, method: :delete %>
            <% else %>
               <%= link_to t(".Login"), new_user_session_path %>
            <% end %>       
          </span>
          <a class="cart" href="/cart">
            <span><i>0 items </i> <b>$0.00</b></span>
          </a>
        </p>
      </div>
        <!-- end nav -->

        
      <!-- end header -->

     

        <div id='content'>
          <div id='sub'>
            <div class='sidebar'>
              <%= render "./layouts/product_catalog" %>
            </div>
            <div class='main'>              
              <p id="notice"><%= notice %></p>
              <%= yield %>
            </div>
          </div>  
		    </div>

    <div id='footer-wrapper'>
    </div>

<%= debug params if Rails.env.development? %>
<%= debug session[:user_id] if Rails.env.development? %>
</body>
</html>

<h3>Product categories:</h3>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Actions</th>  
  </tr>

<% @product_categories.each do |product_category| %>
  <tr>
    <td><%= product_category.name %></td>
    <td><%= link_to "<i class='icon-zoom-in'></i>".html_safe, product_category %>
    <%= link_to "<i class='icon-edit'></i>".html_safe, edit_product_category_path(product_category) %>
    <%= link_to "<i class='icon-remove'></i>".html_safe, product_category, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product category', new_product_category_path,:class => 'btn btn-primary' %>

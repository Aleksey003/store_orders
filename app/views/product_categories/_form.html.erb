<%= form_for(@product_category) do |f| %>
  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_category.errors.count, "error") %> </h2>

      <ul>
      <% @product_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t(:name) %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= t(:parent) %><br />
    <%= f.collection_select :parent_id, ProductCategory.order(:name), :id, :name, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit t(:save) , class:'btn'%>
  </div>
<% end %>




<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "form-signin"}) do |f| %>
	<h2 class="form-signin-heading"><%= t(".sign_in") %></h2>	
	 	<p id="notice"><%= notice %></p>
		<%= f.email_field :email, :autofocus => true, class: 'input-block-level', placeholder:"Email address" %> 
		<%= f.password_field :password, class: 'input-block-level', placeholder:"Password"  %>
	<div id="forgot_password">
	 	<% if false %>
			<% if devise_mapping.rememberable? -%>
		   		<%= f.check_box :remember_me %><%=t(".remember_me") %><br />
		  	<% end %>
		<% end %>
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  			<%= link_to "Забыли пароль?", new_password_path(resource_name) %>
		<% end -%>
	</div>

	<div class="action_bottom">
  		<%= f.submit t(".sign_in") , class:'btn' %>
  		<span class='note'></span>
	</div>
<% end %>





<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class:'form-signin'}) do |f| %>
	<h2 class='form-signin-heading'><%= t(".sign_in") %></h2>
 
  <%= f.email_field :email, :autofocus => true, class: 'input-block-level' %>  
  <%= f.password_field :password, class: 'input-block-level' %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %><%=t(".remember_me") %>
  <% end -%>

  <%= f.submit t(".sign_in") , class: 'btn btn-large btn-primary' %>
<% end %>

<% if true %>
<%= render "devise/shared/links" %>
<% end %>

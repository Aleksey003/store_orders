<p>

  <%= image_tag @user.logo.url(:download => true) %>

</p>
<p>
  <b><%= t(:name) %></b>
  <%= @user.name %>
</p>


<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
	<b><%= t(:parent) %></b>
	<%= @user.parent.name unless @user.parent.nil? %>
</p>

<p>
  <b><%= t(:discount) %></b>
  <%= @user.discount %>

</p>

<%= link_to t(:edit), edit_user_path(@user), class:'btn' %> |
<%= link_to t(:back), users_path, class:'btn' %>

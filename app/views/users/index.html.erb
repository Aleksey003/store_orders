<h2 class="brdr-btm"><%= t(:users) %></h2>
<% if notice %>
<p id="notice"><%= notice %>
<% end %>
<table class="table">
  <thead>
    <tr>
   		<th><%= t(:logo) %></th>
      <th><%= t(:name) %></th>
      <th>Email</th>
      <th>Создан: </th>
      <th><%= t(:parent) %></th>
      <th><%= t(:actions) %></th>  
    </tr>
  </thead> 

<% @users.each do |user| %>
  <tr>
    <td><%= image_tag(user.logo.url(:thumb)) %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.created_at.strftime("%F") %></td>
    <td><%= user.parent.name if !user.parent.nil? %></td>
    <td><%= link_to "<i class='icon-zoom-in'></i>".html_safe, user,class:'btn btn-mini' %>
    <%= link_to "<i class='icon-edit'></i>".html_safe,  edit_user_path(user),class:'btn btn-mini' %>
    <%= link_to "<i class='icon-remove'></i>".html_safe, user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-mini'%>
  </td>
  </tr>
<% end %>
</table>

<div class="btn-bottom">
  <%= will_paginate @users %>
  <%= link_to t('new_user'), new_user_path,:class => 'btn btn-primary' %>
</div>

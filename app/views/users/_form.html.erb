    <%= t :email %></br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= t :discount %></br>
    <%= f.text_field :discount %>
  </div>
	<div class="field">
    <%= t :logo %>
    <%= f.file_field :logo %>
  </div>
	<div class="field">
    <%= t :role %></br>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  </div>


  <div class="actions">
    <%= f.submit t :save %>
  </div>
<% end %>


<% @posts.each do |post| %>
	<hr>
	<p><h3><%= link_to post.title.html_safe, post %></h3></p>
	<%= truncate(post.body, :length => 350).html_safe %>
	<p><%= post.user.name if post.user %></p>
	<div>
	<%= link_to t(:edit), edit_post_path(post), class:'btn btn-link' if can? :update, Post %>
	<%= link_to t(:destroy), post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-link'  if can? :delete, Post%></td>
	</div>
<% end %>


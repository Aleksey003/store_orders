<h3>News</h3>
<hr class="soft">


<% @posts.each do |post| %>
	<div class='posts'>
		<h1><%= link_to post.title.html_safe, post %></h1>
		<div><%= truncate(post.body, length: 400).html_safe %></div>
		<div>
			<p class='date'><%= post.updated_at.strftime("%d/%m/%Y") %></p>
			<%= link_to "Читать", post %>
		</div>
	</div>
<% end %>


<div class='btn-bottom'>
	<%= will_paginate @posts %>
	<%= link_to "Новый", new_post_path, class:'btn btn-success' if can? :create, Post %>
	
</div>
